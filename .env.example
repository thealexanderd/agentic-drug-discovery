# LLM Provider (choose one)
OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# LangSmith (for tracing and LangGraph Studio)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=agentic-drug-discovery

# NCBI/PubMed (optional but recommended for higher rate limits)
NCBI_API_KEY=your_ncbi_key_here
NCBI_EMAIL=your_email@example.com

# Model configuration
LLM_MODEL=gpt-4o  # or claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.1

# Search parameters
MAX_PUBMED_RESULTS=50
MAX_GWAS_RESULTS=100
ENABLE_CACHE=true
